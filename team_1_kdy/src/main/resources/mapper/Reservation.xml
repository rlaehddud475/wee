<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korea.team_1_kdy.mapper.ReservationMapper2">
  <select id="selectAllReservedSeats" resultType="com.korea.team_1_kdy.model.ReservedSeat">
        SELECT reservation_date AS reservationDate, seat_number AS seatNumber
        FROM reservations
    </select>

    <!-- 예약을 삽입하는 쿼리 -->
    <insert id="insertReservation">
        INSERT INTO reservations (reservation_date, seat_number)
        VALUES (#{date}, #{seatNumber})
    </insert>
</mapper>